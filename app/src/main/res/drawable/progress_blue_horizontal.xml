<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/pb_gray"
                android:centerY="0.75"
                android:endColor="@color/pb_gray"
                android:startColor="@color/pb_gray" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/all_activity_xml_background_two"
                    android:centerY="0.75"
                    android:endColor="@color/all_activity_xml_background_two"
                    android:startColor="@color/all_activity_xml_background_two" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/blue_two_main"
                    android:centerY="0.75"
                    android:endColor="@color/blue_two_main"
                    android:startColor="@color/blue_two_main" />
            </shape>
        </clip>
    </item>

</layer-list>