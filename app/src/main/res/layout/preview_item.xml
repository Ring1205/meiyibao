<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/ll_01"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_bian_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/huaban_l"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_011"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:clickable="true"
                android:layout_margin="8dp"
                android:src="@drawable/pitch_quangao_01" />

            <TextView
                android:id="@+id/tv_012"
                style="@style/text_9c_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_011"
                android:paddingLeft="6dp"
                android:text="页面" />

            <TextView
                android:id="@+id/tv_013"
                style="@style/text_3f_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_011"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_012"
                android:text="8"
                android:textSize="16dp" />

            <TextView
                style="@style/text_9c_12dp"
                android:id="@+id/tv_014"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_013"
                android:text="/8" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/ll_02"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_r"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_bian_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/huaban_r"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_021"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:clickable="true"
                android:layout_margin="8dp"
                android:src="@drawable/pitch_quangao_01" />

            <TextView
                android:id="@+id/tv_022"
                style="@style/text_9c_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_021"
                android:paddingLeft="6dp"
                android:text="页面" />

            <TextView
                android:id="@+id/tv_023"
                style="@style/text_3f_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_021"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_022"
                android:text="8"
                android:textSize="16dp" />

            <TextView
                style="@style/text_9c_12dp"
                android:id="@+id/tv_024"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_023"
                android:text="/8" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_031"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:clickable="true"
                android:layout_margin="8dp"
                android:src="@drawable/pitch_quangao_01" />

            <TextView
                android:id="@+id/tv_032"
                style="@style/text_9c_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_031"
                android:paddingLeft="6dp"
                android:text="页面" />

            <TextView
                android:id="@+id/tv_033"
                style="@style/text_3f_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_031"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_032"
                android:text="8"
                android:textSize="16dp" />

            <TextView
                style="@style/text_9c_12dp"
                android:id="@+id/tv_034"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_033"
                android:text="/8" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>