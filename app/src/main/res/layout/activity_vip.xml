<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="49dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/text_color"
                    android:textSize="16dp"
                    android:text="会员制度"/>
            </RelativeLayout>

            <View style="@style/view_wee_line" />
<!--
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/vip_top" />
                -->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="280dp"
             />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_3a_16dp"
                android:layout_margin="19dp"
                android:text="权益简介"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_3a_14dp"
                android:text="权益名称"
                android:layout_marginLeft="19dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/power_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_9c_14dp"
                android:layout_marginLeft="57dp"
                android:text="黄金会员尊享勋章"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_3a_14dp"
                android:text="权益有效期"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="19dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/power_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_9c_14dp"
                android:layout_marginLeft="57dp"
                android:text="与会员有效期一致"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_3a_14dp"
                android:text="权益介绍"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="19dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/power_introduce"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_9c_14dp"
                android:layout_marginLeft="57dp"
                android:text="黄金会员享用更多模板，不受限制"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_3a_14dp"
                android:text="会员价格"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="19dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/power_money"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_9c_14dp"
                android:layout_marginLeft="57dp"
                android:text="100.00元 享受黄金会员权益"/>

            <View
                android:layout_marginTop="35dp"
                style="@style/view_wee_line"/>

            <RelativeLayout
                android:id="@+id/rl_pay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#f9f9f9">
                <ImageView
                    android:id="@+id/iv_pay"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pay_vip"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>