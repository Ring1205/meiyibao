<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f4f8">

    <RelativeLayout
        android:id="@+id/search_rl"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/cancle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="#3a3a3a"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/cancle_tv"
            android:background="@drawable/btn_bg_search"
            android:drawableLeft="@drawable/hoem_top_search"
            android:drawablePadding="14dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textSize="14sp" />
    </RelativeLayout>

<RelativeLayout
    android:layout_below="@+id/search_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view"
        style="@style/view_thick_line"
         />

    <TextView
        android:id="@+id/tv_search01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="1F 热门搜索"
        android:textColor="#3f3f3f"
        android:textSize="18sp" />


    <com.wmcd.myb.view.FlowLayout
        android:id="@+id/fl_hotsearch"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/tv_search01"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="21dp"></com.wmcd.myb.view.FlowLayout>

    <ImageView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/fl_hotsearch"
        android:layout_marginTop="33dp"
        android:background="@drawable/searchbg" />

    <TextView
        android:id="@+id/tv_fenlei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="2F * 分类推荐"
        android:textColor="#3f3f3f"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_fenlei"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/laodong" />

        <ImageView
            android:id="@+id/iv_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/qingnian" />

        <ImageView

            android:id="@+id/iv_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_01"
            android:layout_marginTop="30dp"
            android:src="@drawable/duanwu" />

        <ImageView
            android:id="@+id/iv_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_02"
            android:layout_marginTop="30dp"
            android:src="@drawable/lixia" />

        <ImageView
            android:id="@+id/iv_21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_11"
            android:layout_marginTop="30dp"
            android:src="@drawable/muqin" />

    </RelativeLayout>


