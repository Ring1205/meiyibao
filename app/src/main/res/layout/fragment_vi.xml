<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/publiciti_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/iv_publicity_icon"
            android:text="VI"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/search_publicity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/search_icon" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/fenge1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/publiciti_title"
        android:src="@color/gray" />

    <LinearLayout
        android:id="@+id/select_title"
       android:showDividers="middle"
        android:divider="@drawable/divider"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/fenge1"
        >

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="美业"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="服装"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="餐饮"
            android:textSize="14sp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/fenge2"
        android:layout_below="@+id/select_title"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
<android.support.v7.widget.RecyclerView
    android:layout_marginTop="6dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/rv_vi"
    android:layout_below="@+id/fenge2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


</android.support.v7.widget.RecyclerView>
</RelativeLayout>