<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainTopActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_bottom" />

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/main_tab_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                style="@style/main_tab_sty"
                android:clickable="false"
                android:src="@drawable/tab_home_01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="设计"
                android:textColor="@drawable/home_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tab_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                style="@style/main_tab_sty"
                android:clickable="false"
                android:src="@drawable/tab_home_04" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="分类"
                android:textColor="@drawable/home_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                style="@style/main_tab_sty"
                android:clickable="false"
                android:src="@drawable/tab_home_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="画册"
                android:textColor="@drawable/home_text_color" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/main_tab_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                style="@style/main_tab_sty"
                android:clickable="false"
                android:src="@drawable/tab_home_ining" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="会员"
                android:textColor="@drawable/home_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tab_04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                style="@style/main_tab_sty"
                android:clickable="false"
                android:src="@drawable/tab_home_06" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="个人"
                android:textColor="@drawable/home_text_color" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>