<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView_01"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="设置"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:id="@+id/iv_xieyi"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/yonghuxieyi" />
            </RelativeLayout>

            <View style="@style/view_wee_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/home_top_meiyibao" />

                <TextView
                    style="@style/text_3f_14dp"
                    android:id="@+id/tv_banben"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:text="版本1.0.3" />

                <TextView
                    style="@style/text_3f_14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp"
                    android:singleLine="false"
                    android:text="美易宝简介\n一款针对于美业商家的线上方案解决平台，涵盖了线下宣传物料设计、活动方案提供、经营管理系统、推广途径开发等。为商家 最大化节约成本，制定量身打造的方案，打开销售渠道，达到收益倍增。\n美易宝将致力于让美业店面经营管理更容易的目标而努力。" />
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    style="@style/text_9c_12dp"
                    android:text="客服联系电话：17352807303 17352807306"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_log_out"
                style="@style/text_3f_18dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center"
                android:text="退出登录" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>